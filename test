#include "libft.h"

static const char	*remove_space(const char *str, int *flag)
{
	*flag = 1;
	while (ft_isspace(*str))
		str++;
	if (*str == '-' || *str == '+')
	{
		if (*str == '-')
			*flag = *flag * -1;
		str++;
	}
	return (str);
}

int	ft_atoi(const char *str)
{
	int	flag;
	int	dest;

	dest = 0;
	str = remove_space(str, &flag);
	if (*str >= '0' && *str <= '9')
	{
		while (*str >= '0' && *str <= '9')
		{
			dest = (dest * 10) + (*str - '0');
			str++;
		}
		return (dest * flag);
	}
	else
		return (0);
}
